doctype html
html
    head
        title.titleID=title
        script(src='/javascripts/func.js').
        script(src = '/javascripts/jquery.js').
        link(rel='stylesheet', href='/stylesheets/style.css')
    body
        audio.Audio#myMusic(controls = 'controls',autoplay="autoplay")
            source#audioSrc(type = 'audio/mpeg')
            //显示音频控件，并自动播放音频
        p
            img.musicImg#musicImg(alt="Just Play It !")
            //设置没有图片src时显示的文字信息	
            img.background(src= '/images/background.jpg')
            //网页背景图片
        p.v#v   
            video.myVideo#myVideo(src ='')
        p.c#c
            canvas.myCanvas#myCanvas(src = '')
        h.hide#test=catalogMusic
        h.hide#video=catalogVideo
        h.hide#image=catalogImage
        //显示，只是为了接受从服务器传来的歌曲名字符串

        button.buttonLast#buttonLast(type = 'button', onclick = "playLastSong()") Precédent
        button.buttonNext#buttonNext(type = 'button', onclick = "playNextSong()") Suivante
        button.lyricsShow#lyricsShow(type = 'button', onclick = "showLyrics()")  Afficher les Paroles
        button.lyricsHide#lyricsHide(type = 'button', onclick = "hideLyrics()") Cacher les Paroles
        button.catalogShow#catalogShow(type="button", onclick="showCatalog()") Music Catalogue
        button.catalogHide#catalogHide(type="button",onclick="hideCatalog()") Cacher Music catalogue
        button.catalogShowImage#catalogShowImage(type="button", onclick="showCatalogImage()") Image Catalogue
        button.catalogHideImage#catalogHideImage(type="button",onclick="hideCatalogImage()") Cacher Image catalogue
        button.catalogShowVideo#catalogShowVideo(type="button", onclick="showCatalogVideo()") Video Catalogue
        button.catalogHideVideo#catalogHideVideo(type="button",onclick="hideCatalogVideo()") Cacher Video catalogue
        button.repeatAllSongs#repeatAllSongs(type="button",onclick="repeatAllSongs()") Cycle
        button.repeatCurrentSong#repeatCurrentSong(type="button",onclick="repeatCurrentSong()") Unique              
        button.buttonLastVideo#buttonLastVideo(type = 'button', onclick = "playLastVideo()") Last one
        button.buttonNextVideo#buttonNextVideo(type = 'button', onclick = "playNextVideo()") Next one
        button.buttonGo#buttonGo(type = 'button', onclick = "Go()") Go
        button.buttonBack#buttonBack(type = 'button', onclick = "Back()") Back
        button.buttonicontime#buttonicontime(type = 'button') time
        input.btntime#btntime(type='range', value='0', max='100') 
        button.btnstart#btnstart(type = 'button', onclick = "play()") Pause
        input.btnsound#btnsound(type='range', value='0', max='100', onmousedown = "sound()")
        button.buttoniconsound#buttoniconsound(type = 'button') sound
        button.buttonLastImage#buttonLastImage(type = 'button', onclick = "playLastImage()") Precédent
        button.buttonNextImage#buttonNextImage(type = 'button', onclick = "playNextImage()") Suivante
        nav
            ul
                li
                    a.likes_homepage(href='/') Homepage
                li
                    a.dislikes_likes(href='likes') Likes
                li
                    a.likes_dislikes(href='dislikes') Dislikes
        .outer-container#lyricsBox
            .inner-container
                .content#lyrics
                //显示歌词的框，用三个div元素是为了隐藏滚动条

        .cataBox2#cataBox2
            .cataBox1
               .cataBox#cataBox
                //显示目录的框，用三个div元素是为了隐藏滚动条

        .hide#prefix=getPrefix
        //不显示，只是为了接受从服务器传来的前缀字符串
        
        



